extends ../layout

block content
  h1 Add New Link
  
  form(method="post", action="/links" id="linkForm")
    label(for="url")
    input(
      type="text"
      name="title"
      placeholder="Title"
      id="title"
      )
    input(
      type="text"
      name="url"
      placeholder="url"
      id="url"
      )
    input(
      type="Submit"
      value="Submit"
      )
